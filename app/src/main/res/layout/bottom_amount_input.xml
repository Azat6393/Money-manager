<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_color"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <RadioGroup
                android:id="@+id/radio_group"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="18"
                app:layout_constraintTop_toBottomOf="@+id/back_btn">

                <RadioButton
                    android:id="@+id/dollar"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_margin="10dp"
                    android:layout_weight="3"
                    android:background="@drawable/radio_button_background"
                    android:button="@drawable/radio_button_background"
                    android:checked="true"
                    android:gravity="center"
                    android:text="$"
                    android:textColor="@drawable/radio_button_text_color" />

                <RadioButton
                    android:id="@+id/euro"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="3"
                    android:background="@drawable/radio_button_background"
                    android:button="@drawable/radio_button_background"
                    android:checked="false"
                    android:gravity="center"
                    android:text="€"
                    android:textColor="@drawable/radio_button_text_color" />

                <RadioButton
                    android:id="@+id/pound"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="10dp"
                    android:layout_weight="3"
                    android:background="@drawable/radio_button_background"
                    android:button="@drawable/radio_button_background"
                    android:checked="false"
                    android:gravity="center"
                    android:text="£"
                    android:textColor="@drawable/radio_button_text_color" />

                <RadioButton
                    android:id="@+id/lira"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_margin="10dp"
                    android:layout_weight="3"
                    android:background="@drawable/radio_button_background"
                    android:button="@drawable/radio_button_background"
                    android:checked="false"
                    android:gravity="center"
                    android:text="₺"
                    android:textColor="@drawable/radio_button_text_color" />

            </RadioGroup>

            <ImageView
                android:id="@+id/currency_list_btn"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:src="@drawable/earth_icon"
                app:tint="@color/primary" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="10dp"
            android:background="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="12">

            <androidx.cardview.widget.CardView
                android:id="@+id/one_btn"
                android:layout_width="0dp"
                android:layout_height="@dimen/amount_button_height"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="3"
                app:cardBackgroundColor="@color/primary_container"
                app:cardCornerRadius="30dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/primary"
                    android:textSize="25sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/two_btn"
                android:layout_width="0dp"
                android:layout_height="@dimen/amount_button_height"
                android:layout_weight="3"
                app:cardBackgroundColor="@color/primary_container"
                app:cardCornerRadius="30dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="@color/primary"
                    android:textSize="25sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/three_btn"
                android:layout_width="0dp"
                android:layout_height="@dimen/amount_button_height"
                android:layout_marginStart="10dp"
                android:layout_weight="3"
                app:cardBackgroundColor="@color/primary_container"
                app:cardCornerRadius="30dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="@color/primary"
                    android:textSize="25sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/delete_btn"
                android:layout_width="0dp"
                android:layout_height="@dimen/amount_button_height"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="3"
                app:cardBackgroundColor="@color/primary"
                app:cardCornerRadius="30dp">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp"
                    android:src="@drawable/material_backspace"
                    app:tint="@color/primary_container" />

            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:weightSum="12">

            <androidx.cardview.widget.CardView
                android:id="@+id/four_btn"
                android:layout_width="0dp"
                android:layout_height="@dimen/amount_button_height"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="3"
                app:cardBackgroundColor="@color/primary_container"
                app:cardCornerRadius="30dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="4"
                    android:textColor="@color/primary"
                    android:textSize="25sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/five_btn"
                android:layout_width="0dp"
                android:layout_height="@dimen/amount_button_height"
                android:layout_weight="3"
                app:cardBackgroundColor="@color/primary_container"
                app:cardCornerRadius="30dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="5"
                    android:textColor="@color/primary"
                    android:textSize="25sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/six_btn"
                android:layout_width="0dp"
                android:layout_height="@dimen/amount_button_height"
                android:layout_marginStart="10dp"
                android:layout_weight="3"
                app:cardBackgroundColor="@color/primary_container"
                app:cardCornerRadius="30dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="6"
                    android:textColor="@color/primary"
                    android:textSize="25sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/minus_btn"
                android:layout_width="0dp"
                android:layout_height="@dimen/amount_button_height"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="3"
                app:cardBackgroundColor="@color/primary_container"
                app:cardCornerRadius="30dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="-"
                    android:textColor="@color/primary"
                    android:textSize="25sp" />

            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:weightSum="12">

            <androidx.cardview.widget.CardView
                android:id="@+id/seven_btn"
                android:layout_width="0dp"
                android:layout_height="@dimen/amount_button_height"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="3"
                app:cardBackgroundColor="@color/primary_container"
                app:cardCornerRadius="30dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="7"
                    android:textColor="@color/primary"
                    android:textSize="25sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/eight_btn"
                android:layout_width="0dp"
                android:layout_height="@dimen/amount_button_height"
                android:layout_weight="3"
                app:cardBackgroundColor="@color/primary_container"
                app:cardCornerRadius="30dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="8"
                    android:textColor="@color/primary"
                    android:textSize="25sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/nine_btn"
                android:layout_width="0dp"
                android:layout_height="@dimen/amount_button_height"
                android:layout_marginStart="10dp"
                android:layout_weight="3"
                app:cardBackgroundColor="@color/primary_container"
                app:cardCornerRadius="30dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="9"
                    android:textColor="@color/primary"
                    android:textSize="25sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/calculate_btn"
                android:layout_width="0dp"
                android:layout_height="@dimen/amount_button_height"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="3"
                app:cardBackgroundColor="@color/primary_container"
                app:cardCornerRadius="30dp">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="12dp"
                    android:src="@drawable/ic_baseline_calculate_24"
                    app:tint="@color/primary" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:weightSum="12">

            <androidx.cardview.widget.CardView
                android:id="@+id/star_btn"
                android:layout_width="0dp"
                android:layout_height="@dimen/amount_button_height"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="3"
                android:visibility="invisible"
                app:cardBackgroundColor="@color/primary"
                app:cardCornerRadius="30dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/primary_container"
                    android:textSize="25sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/zero_btn"
                android:layout_width="0dp"
                android:layout_height="@dimen/amount_button_height"
                android:layout_marginBottom="20dp"
                android:layout_weight="3"
                app:cardBackgroundColor="@color/primary_container"
                app:cardCornerRadius="30dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/primary"
                    android:textSize="25sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/dot_btn"
                android:layout_width="0dp"
                android:layout_height="@dimen/amount_button_height"
                android:layout_marginStart="10dp"
                android:layout_weight="3"
                app:cardBackgroundColor="@color/primary_container"
                app:cardCornerRadius="30dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="."
                    android:textColor="@color/primary"
                    android:textSize="25sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/done_btn"
                android:layout_width="0dp"
                android:layout_height="@dimen/amount_button_height"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="3"
                app:cardBackgroundColor="@color/secondary"
                app:cardCornerRadius="30dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="@string/done"
                    android:textColor="@color/primary"
                    android:textSize="15sp" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>