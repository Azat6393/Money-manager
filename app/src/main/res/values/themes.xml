<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ParaSayar_Light" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_theme_primary</item>
        <item name="colorPrimaryVariant">@color/light_theme_primary</item>
        <item name="colorOnPrimary">@color/light_theme_background_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_theme_primary</item>
        <item name="colorSecondaryVariant">@color/light_theme_primary</item>
        <item name="colorOnSecondary">@color/light_theme_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="black">@color/light_theme_black</item>
        <item name="white">@color/light_theme_white</item>
        <item name="background_color">@color/light_theme_background_color</item>
        <item name="gray_background_color">@color/light_theme_gray_background_color</item>
        <item name="primary">@color/light_theme_primary</item>
        <item name="primary_container">@color/light_theme_primary_container</item>
        <item name="surface">@color/light_theme_surface</item>
        <item name="light_gray">@color/light_theme_light_gray</item>
        <item name="neutral">@color/light_theme_neutral</item>
        <item name="secondary">@color/light_theme_secondary</item>
        <item name="blue">@color/light_theme_blue</item>
        <item name="red">@color/light_theme_red</item>
        <item name="green">@color/light_theme_green</item>

    </style>


    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>


    <style name="MineCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="EditTextTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/light_theme_primary</item>
        <item name="colorControlActivated">@color/light_theme_primary</item>
        <item name="colorControlHighlight">@color/light_theme_primary</item>
    </style>

</resources>